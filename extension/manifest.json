{
    "manifest_version": 3,
    "name": "YouTube Filter Extension",
    "version": "1.0",
    "description": "Filters YouTube videos based on user-defined prompts.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://youtube-fetch.onrender.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}